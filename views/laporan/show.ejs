function calculateDeswaSLA() {
  const startDate = document.getElementById('deswaStartDate').value;
  const endDate = document.getElementById('deswaEndDate').value;
  const slaDisplay = document.getElementById('deswaSlaDisplay');
  
  if (startDate && endDate) {
    const start = new Date(startDate);
    const end = new Date(endDate);
    const sla = Math.ceil((end - start) / (1000 * 60 * 60 * 24));
    slaDisplay.value = sla >= 0 ? sla : 0;
  } else {
    slaDisplay.value = '';
  }
}

