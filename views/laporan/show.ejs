function openModalPenelponan(){ document.getElementById('modalPenelponan').classList.remove('hidden'); }
function closeModalPenelponan(){ document.getElementById('modalPenelponan').classList.add('hidden'); document.getElementById('formPenelponan').reset(); }
async function submitPenelponan(e){
  e.preventDefault();
  const data = Object.fromEntries(new FormData(document.getElementById('formPenelponan')));
