            <p class="whitespace-pre-wrap text-sm text-gray-700 dark:text-gray-300">${r.hasil }</p>
          </div>
          ${userRole === 'deswa' || userRole === 'admin' ? `
            <div class="flex flex-col gap-2">
              <button onclick="editResumeInvestigasi('${r.id}', \`${r.hasil}\`)" 
                class="px-3 py-1 bg-blue-500 hover:bg-blue-600 text-white text-xs rounded">‚úèÔ∏è Edit</button>
              <button onclick="deleteResumeInvestigasi(${r.id})" 
                class="px-3 py-1 bg-red-500 text-white text-xs rounded">üóëÔ∏è Hapus</button>
            </div>
          ` : ''}
        </div>
      </div>
    `).join('');
  } catch(err) { console.error('Load Investigasi Error:', err); }
}

async function deleteResumeInvestigasi(id) {
  if (!confirm('Yakin hapus data ini?')) return;
  try {
