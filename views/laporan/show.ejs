function closeModalResumeInvestigasi() { 
  document.getElementById('modalResumeInvestigasi').classList.add('hidden'); 
  document.getElementById('formResumeInvestigasi').reset();
  document.getElementById('investigasi_id').value = ''; 
  const title = document.getElementById('modalInvestigasiTitle');
  if(title) title.innerText = 'üìã Resume Investigasi';
}

function editResumeInvestigasi(id, text) {
  document.getElementById('investigasi_id').value = id;
  document.getElementById('investigasi_text').value = text;
  document.getElementById('modalInvestigasiTitle').innerText = 'üìù Edit Resume Investigasi';
  openModalResumeInvestigasi();
}

async function submitResumeInvestigasi(e) {
  e.preventDefault();
  
  const form = document.getElementById('formResumeInvestigasi');
  const formData = new FormData(form);
  const dataObj = Object.fromEntries(formData.entries());
  
  const isEdit = dataObj.id && dataObj.id !== "";
  const method = isEdit ? 'PUT' : 'POST';
  const url = isEdit 
    ? `/laporan/<%= data.id %>/resume-investigasi/${dataObj.id}` 
    : `/laporan/<%= data.id %>/resume-investigasi`;

  console.log("Investigasi Submit:", { url, method, dataObj }); // Cek di Console F12

  try {
    const res = await fetch(url, {
      method: method,
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(dataObj)
    });

    if (res.ok) {
      alert('Resume Investigasi berhasil disimpan');
      closeModalResumeInvestigasi();
      if (typeof loadResumeInvestigasiList === "function") loadResumeInvestigasiList();
    } else {
      alert('Gagal memproses data investigasi');
    }
  } catch(err) {
    console.error('Fetch Investigasi Error:', err);
    alert('Kesalahan koneksi ke server');
  }
}

async function loadResumeInvestigasiList() {
  try {
    const res = await fetch('/laporan/<%= data.id %>/resume-investigasi');
    const rows = await res.json();
    const container = document.getElementById('resumeInvestigasiList');
    const userRole = '<%= user.role %>';
    
    if (!rows || !rows.length) {
      container.innerHTML = '<p class="text-gray-500 text-center py-8">Belum ada resume investigasi</p>';
      return;
    }
    
    container.innerHTML = rows.map((r, idx) => `
      <div class="border rounded-lg p-4 dark:border-slate-700 bg-gray-50 dark:bg-slate-900">
        <div class="flex justify-between items-start gap-4">
          <div class="flex-1">
