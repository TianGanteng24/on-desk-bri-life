        <input type="number" name="sla" id="briSlaDisplay" readonly placeholder="Akan otomatis ter-hitung" class="w-full border rounded-lg px-4 py-2 dark:bg-slate-700 bg-gray-100 dark:bg-slate-800">
      </div>
      <div class="flex justify-end gap-3 pt-4">
        <button type="button" onclick="closeModalBri()" class="px-6 py-2 border rounded-lg">Batal</button>
        <button type="submit" class="px-6 py-2 bg-indigo-600 text-white rounded-lg">Simpan</button>
      </div>
    </form>
  </div>
</div>



<script>
// BRI Modal & Functions
function openModalBri() { document.getElementById('modalBri').classList.remove('hidden'); }
function closeModalBri() { document.getElementById('modalBri').classList.add('hidden'); document.getElementById('formBri').reset(); }

function calculateBriSLA() {
  const startDate = document.getElementById('briStartDate').value;
  const endDate = document.getElementById('briEndDate').value;
  const slaDisplay = document.getElementById('briSlaDisplay');
  
  if (startDate && endDate) {
    const start = new Date(startDate);
    const end = new Date(endDate);
    const sla = calculateBusinessDays(start, end);
    slaDisplay.value = sla >= 0 ? sla : 0;
  } else {
    slaDisplay.value = '';
  }
}

async function submitBri(event) {
  event.preventDefault();
  const data = Object.fromEntries(new FormData(document.getElementById('formBri')));
  try {
    const res = await fetch('/laporan/<%= data.id %>/bri', {
      method: 'POST', headers: {'Content-Type':'application/json'}, body: JSON.stringify(data)
    });
    if (res.ok) { 
      toastr.success('BRI data tersimpan'); 
      closeModalBri(); 
      loadBriList(); 
    } else {
      toastr.error('Gagal menyimpan BRI');
    }
  } catch(err) { 
    console.error(err); 
    toastr.error('Terjadi kesalahan'); 
  }
}

async function loadBriList() {
  try {
    const res = await fetch('/laporan/<%= data.id %>/bri');
    const rows = await res.json();
    const container = document.getElementById('briList');
    if (!rows.length) { 
      container.innerHTML = '<p class="text-gray-500 dark:text-gray-400 text-center py-8">Belum ada data BRI</p>'; 
      return; 
    }
    container.innerHTML = rows.map(r => `
      <div class="border rounded-lg p-4 dark:border-slate-700 bg-gray-50 dark:bg-slate-900">
        <div class="flex justify-between items-start mb-3">
          <div>
            <h4 class="font-semibold text-lg">${r.pic_investigator}</h4>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              ${new Date(r.tanggal_submit_pic_analis).toLocaleDateString('id-ID')} - ${new Date(r.tanggal_submit_pic_investigator).toLocaleDateString('id-ID')}
            </p>
          </div>
          <button onclick="deleteBri(${r.id})" class="px-3 py-1 bg-red-500 hover:bg-red-600 text-white text-xs rounded">
            üóëÔ∏è Hapus
          </button>
        </div>
        <div class="text-sm">
          <p class="text-gray-600 dark:text-gray-400">SLA Proses</p>
          <p class="font-medium">${r.sla } hari</p>
        </div>
      </div>
    `).join('');
  } catch(err) { 
    console.error('Load BRI error', err); 
  }
}

async function deleteBri(id) {
  if (!confirm('Yakin hapus data BRI ini?')) return;
  try {
    const res = await fetch(`/laporan/<%= data.id %>/bri/${id}`, { method: 'DELETE' });
    if (res.ok) { 
      toastr.success('BRI dihapus'); 
      loadBriList(); 
    }
  } catch(err) { 
    console.error(err); 
  }
}
</script>

</div>

