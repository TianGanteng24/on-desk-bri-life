<script>
/**
 * SECTION: RESUME INTERVIEW
 */
function openModalResumeInterview() { 
  document.getElementById('modalResumeInterview').classList.remove('hidden'); 
}

function closeModalResumeInterview() { 
  document.getElementById('modalResumeInterview').classList.add('hidden'); 
  document.getElementById('formResumeInterview').reset(); 
  document.getElementById('interview_id').value = ''; 
  const title = document.getElementById('modalInterviewTitle');
  if(title) title.innerText = 'üìù Resume Interview';
}

function editResumeInterview(id, text) {
  document.getElementById('interview_id').value = id;
  document.getElementById('interview_hasil').value = text;
  document.getElementById('modalInterviewTitle').innerText = 'üìù Edit Resume Interview';
  openModalResumeInterview();
}

async function submitResumeInterview(e) {
  e.preventDefault();
  
  // Pastikan ID elemen form benar
  const form = document.getElementById('formResumeInterview');
  const formData = new FormData(form);
  const dataObj = Object.fromEntries(formData.entries());
  
  const isEdit = dataObj.id && dataObj.id !== "";
  const method = isEdit ? 'PUT' : 'POST';
  const url = isEdit 
    ? `/laporan/<%= data.id %>/resume-interview/${dataObj.id}` 
    : `/laporan/<%= data.id %>/resume-interview`;

  console.log("Interview Submit:", { url, method, dataObj }); // Cek di Console F12

  try {
    const res = await fetch(url, { 
      method: method, 
      headers: { 'Content-Type': 'application/json' }, 
      body: JSON.stringify(dataObj)
    });
    
    if (res.ok) { 
      alert('Resume Interview berhasil disimpan');
      closeModalResumeInterview(); 
      if (typeof loadResumeInterviewList === "function") loadResumeInterviewList(); 
    } else { 
      alert('Gagal simpan: Server merespon dengan error'); 
    }
  } catch (err) { 
    console.error('Fetch Interview Error:', err);
    alert('Terjadi kesalahan koneksi ke server'); 
  }
}

async function loadResumeInterviewList() {
  try {
    const res = await fetch('/laporan/<%= data.id %>/resume-interview');
    const resume = await res.json();
    const container = document.getElementById('resumeInterviewDisplay');
    const userRole = '<%= user.role %>'; 
    
    if (!resume || !resume.id) {
      container.innerHTML = '<p class="text-gray-500 text-center py-4">Belum ada resume interview</p>';
      return;
    }
    
    const btnAdd = document.getElementById('btnContainerInterview');
    if(btnAdd) btnAdd.style.display = 'none';

    container.innerHTML = `
      <div class="border rounded-lg p-4 dark:border-slate-700 bg-gray-50 dark:bg-slate-900 mb-4">
        <div class="flex justify-between items-center mb-3 border-b pb-2 dark:border-slate-700">
          <h4 class="font-semibold text-blue-600 uppercase text-xs">Hasil Interview Ahli Waris</h4>
          ${userRole === 'deswa' || userRole === 'admin' ? `
            <button onclick="editResumeInterview('${resume.id}', \`${resume.hasil_interview}\`)" 
              class="text-xs bg-amber-500 hover:bg-amber-600 text-white px-2 py-1 rounded">‚úèÔ∏è Edit</button>
          ` : ''}
        </div>
        <p class="whitespace-pre-wrap text-sm">${resume.hasil_interview }</p>
      </div>`;
  } catch(err) { console.error('Load Interview Error:', err); }
}

document.addEventListener('DOMContentLoaded', loadResumeInterviewList);
</script>

