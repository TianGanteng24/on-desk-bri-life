async function submitOnDesk(event) {
  event.preventDefault();
  const form = document.getElementById('formOnDesk');
  const formData = new FormData(form);
  const sel = document.getElementById('faskesSelect');
  if (sel) {
    const val = sel.value;
    if (val === '__other__') {
      const newName = document.getElementById('newFaskes').value.trim();
      if (newName) {
        const r = await fetch('/faskes', { method:'POST', headers:{'Content-Type':'application/json'}, body: JSON.stringify({ nama_faskes: newName }) });
        const j = await r.json();
        formData.set('nama_faskes', j.nama_faskes || newName);
      }
    } else {
      formData.set('nama_faskes', val);
    }
  }
  const data = Object.fromEntries(formData);
  try {
    const response = await fetch('/laporan/<%= data.id %>/hasil-on-desk', {
      method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify(data)
    });
