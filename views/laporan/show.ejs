<div id="modalPenelponan" class="hidden fixed inset-0 bg-black/50 flex items-center justify-center z-50">
  <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-2xl p-6 w-full max-w-md mx-4">
    <h3 class="text-lg font-semibold mb-4">Tambah Log Telepon</h3>
    <form id="formPenelponan" onsubmit="submitPenelponan(event)" class="grid gap-3 dark:bg-slate-800">
      <input type="hidden" id="currentOnDeskId" name="onDeskId">
      <input type="date" name="tanggal_telepon" required class="border p-2 rounded dark:bg-slate-700 dark:border-slate-600">
      <input type="time" name="jam_telepon" required class="border p-2 rounded dark:bg-slate-700 dark:border-slate-600">
      <input type="text" name="hasil_telepon" required placeholder="Hasil Telepon" class="border p-2 rounded dark:bg-slate-700 dark:border-slate-600">
      <div class="flex justify-end gap-2">
        <button type="button" onclick="closeModalPenelponan()" class="px-4 py-2 border rounded dark:bg-slate-700 dark:text-gray-400">Batal</button>
        <button type="submit" class="px-4 py-2 bg-green-600 text-white rounded">Simpan</button>
      </div>
    </form>
  </div>
</div>

<script>
function openModalPenelponan(onDeskId){ 
  document.getElementById('currentOnDeskId').value = onDeskId;
  document.getElementById('modalPenelponan').classList.remove('hidden'); 
}
function closeModalPenelponan(){ 
  document.getElementById('modalPenelponan').classList.add('hidden'); 
  document.getElementById('formPenelponan').reset(); 
}
async function submitPenelponan(e){
  e.preventDefault();
  const onDeskId = document.getElementById('currentOnDeskId').value;
  const formData = new FormData(document.getElementById('formPenelponan'));
  formData.delete('onDeskId');
  const data = Object.fromEntries(formData);
  try{
    const res = await fetch(`/hasil-on-desk/${onDeskId}/penelponan`, { 
      method:'POST', 
      headers:{'Content-Type':'application/json'}, 
      body: JSON.stringify(data)
    });
    if(res.ok){ 
      closeModalPenelponan(); 
      loadOnDeskList(); 
    } else { 
      const error = await res.json();
      alert('Gagal: ' + error.error); 
    }
  }catch(err){ 
    console.error(err); 
    alert('Terjadi kesalahan'); 
  }
}
</script>

